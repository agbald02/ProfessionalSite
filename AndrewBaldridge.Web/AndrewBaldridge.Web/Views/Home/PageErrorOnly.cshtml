@model HandleErrorInfo
@{
    Response.StatusCode = 500;
    //Layout = "~/Views/Shared/Layouts/_Empty.cshtml";
    ViewBag.Title = "Error";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="google-site-verification" content="JcsmmQzzAPbXSN-O_hg-rqC83ptdMK-yCg2GHK7G8HM" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />

    <title>Andrew Baldridge</title>

    <style>
        .btn a {
            color: black;
            text-decoration-color: green;
            font-weight: bold;
            font-style: italic;
        }
    </style>

</head>
<body>

    <h4>Error</h4>

    <div class="alert alert-danger">
        An unexpected error has occurred. Please contact the system administrator.
    </div>
    @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
    {
        <div>
            <p>
                <strong>Exception:</strong> @Model.Exception.Message <br />
                <strong>Controller:</strong> @Model.ControllerName <br />
                <strong>Action:</strong> @Model.ActionName
            </p>
            <pre>
@Html.Partial("_StackTrace", Model.Exception)
        </pre>
        </div>
    }
    </body>
</html>